            app:brightness="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image15"
            app:layout_constraintTop_toBottomOf="@id/image11"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brightness=2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image16"
            app:layout_constraintStart_toStartOf="@id/image16"
            app:layout_constraintTop_toBottomOf="@id/image16" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image17"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:contrast="0"
            app:layout_constraintEnd_toStartOf="@id/image18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image14"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contrast=0"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image17"
            app:layout_constraintStart_toStartOf="@id/image17"
            app:layout_constraintTop_toBottomOf="@id/image17" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image18"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:contrast="1"
            app:layout_constraintEnd_toStartOf="@id/image19"
            app:layout_constraintStart_toEndOf="@id/image17"
            app:layout_constraintTop_toBottomOf="@id/image14"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contrast=1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image18"
            app:layout_constraintStart_toStartOf="@id/image18"
