            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:layout_constraintEnd_toStartOf="@id/image12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image8"
            app:round="20dp"
            app:saturation="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saturation=0"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image11"
            app:layout_constraintStart_toStartOf="@id/image11"
            app:layout_constraintTop_toBottomOf="@id/image11" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:layout_constraintEnd_toStartOf="@id/image13"
            app:layout_constraintStart_toEndOf="@id/image11"
            app:layout_constraintTop_toBottomOf="@id/image8"
            app:round="20dp"
            app:saturation="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saturation=1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image12"
            app:layout_constraintStart_toStartOf="@id/image12"
            app:layout_constraintTop_toBottomOf="@id/image12" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image13"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image12"
            app:layout_constraintTop_toBottomOf="@id/image8"
            app:round="20dp"
            app:saturation="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saturation=2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image13"
            app:layout_constraintStart_toStartOf="@id/image13"
            app:layout_constraintTop_toBottomOf="@id/image13" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image14"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:brightness="0"
            app:layout_constraintEnd_toStartOf="@id/image15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image11"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brightness=0"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image14"
            app:layout_constraintStart_toStartOf="@id/image14"
            app:layout_constraintTop_toBottomOf="@id/image14" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image15"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:brightness="1"
            app:layout_constraintEnd_toStartOf="@id/image16"
            app:layout_constraintStart_toEndOf="@id/image14"
            app:layout_constraintTop_toBottomOf="@id/image11"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brightness=1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image15"
            app:layout_constraintStart_toStartOf="@id/image15"
            app:layout_constraintTop_toBottomOf="@id/image15" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image16"
