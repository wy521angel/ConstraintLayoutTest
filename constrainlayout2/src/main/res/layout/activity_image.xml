        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image19"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/gem1"
            app:contrast="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image18"
            app:layout_constraintTop_toBottomOf="@id/image15"
            app:round="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contrast=2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/image19"
            app:layout_constraintStart_toStartOf="@id/image19"
            app:layout_constraintTop_toBottomOf="@id/image19" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>